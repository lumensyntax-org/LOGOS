{
  "name": "@logos/core",
  "version": "0.1.0",
  "description": "Core verification engine with Christological architecture",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "test": "vitest",
    "test:coverage": "vitest --coverage --run",
    "lint": "eslint 'src/**/*.ts'",
    "typecheck": "tsc -p tsconfig.build.json",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "tsx": "^4.20.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.9"
  },
  "keywords": [
    "verification",
    "christology",
    "gap-theory",
    "logos",
    "truth"
  ],
  "license": "Apache-2.0"
}
